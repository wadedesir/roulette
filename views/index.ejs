<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8">
  <meta http-equiv="X-UA-Compatible" content="IE=edge">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <link rel="stylesheet" href="css/style.css">
  <title>Roulette</title>

  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-eOJMYsd53ii+scO/bJGFsiCZc+5NDVN2yr8+0RDqr0Ql0h+rP48ckxlpbzKgwra6" crossorigin="anonymous">
</head>

<body class="container">

  <main class="row h-100">

    <aside class="col-3 d-flex flex-column align-items-center justify-content-around">
      <h1>Roulette</h1>
      <div class="card border-info">
        <div class="card-body text-dark">
          <h3 class="card-title">New Bet</h3>
          <label for="userChoice">Number Selection</label>
          <select class="form-select mb-3" aria-label=".form-select-lg example" name="userChoice" id="userChoice" form="userOptions" required>
            <option class="red" value="red">Red</option>
            <option class="black" value="black">Black</option>
          </select>
          <label for="currentBet">Current Bet:</label>
          <h3 id="currentBet">CB</h3>
          <button form="userOptions" class="btn btn-info" type="submit">Spin!</button>
        </div>
      </div>

      <h2><span></span></h2>
      <h3 class="wins">Your wins: <span class="winsValue"><%= wins %></span></h3>
      <h3 class="losses">Your Losses: <span class="lossesValue"><%= losses %></span></h3>
      <h4>Winning Cash: <span class="moneyValue">$<%= casinoBank %></span></h4>
      <form id="userOptions" name="userOptions">
        <label for="play">Total Cash</label>
        <h2 name="play" id="userNumber">$3000</h2>
      </form>
      <a href="/login"><button class="btn btn-outline-warning">Staff Login</button></a>
    </aside>

    <section class="col-9">
      <!-- <div class="row flex-column"> -->
        <div id="ball-out" class="col d-flex justify-content-center align-items-center rouletteWheel">
          <!-- <section  class="col-3"> -->
            <!-- <img class=" "id='ball' src="img/ball.png"> -->
          <!-- </section> -->

          <div class="col-3 d-flex justify-content-center align-items-center">
            <h3 class="text-center">AYOOOO</h3>
          </div>
        </div>
        <div class="col d-flex align-items-center flex-wrap chips">
          <div class="col-4"><img src="img/black.png" alt="casinoChip"></div>
          <div class="col-4"><img src="img/blue.png" alt="casinoChip"></div>
          <div class="col-4"><img src="img/red.png" alt="casinoChip"></div>
          <div class="col-4"><img src="img/green.png" alt="casinoChip"></div>
          <div class="col-4"><img src="img/orange.png" alt="casinoChip"></div>
          <div class="col-4"><img src="img/black2.png" alt="casinoChip"></div>
        </div>
      <!-- </div> -->

    </section>

  </main>
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta3/dist/js/bootstrap.bundle.min.js" integrity="sha384-JEW9xMcG8R+pH31jmWH6WWP0WintQrMb4s7ZOdauHnUtxwoG2vI5DkLtS3qm9Ekf" crossorigin="anonymous"></script>
  <script src="./js/main.js"></script>
</body>

</html>
